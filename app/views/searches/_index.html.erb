<h2>検索結果</h2>

<table class="table table-hover  table-striped">


  <% if type == "User" %>
      <thead>
        <tr>
          <td>Name</td>
          <td>Introduction</td>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
  <% else %>
      <thead>
        <th>
          <td>Title</td>
          <td>Opinion</td>
        </th>
      </thead>
      <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
  <% end %>
</table>